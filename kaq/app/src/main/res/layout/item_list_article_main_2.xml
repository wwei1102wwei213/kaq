<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding8"
        android:paddingRight="@dimen/padding8"
        android:paddingTop="@dimen/padding8"
        >
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/loading_fail"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin4"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/no_select_505155_select_999"
                android:textSize="@dimen/font15"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textStyle="bold"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/font12"
                    android:layout_marginRight="@dimen/margin8"
                    android:drawableLeft="@mipmap/like_forum_base"
                    android:drawablePadding="4dp"

                    />
                <TextView
                    android:id="@+id/tv_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/font12"
                    android:drawableLeft="@mipmap/watch"
                    android:drawablePadding="4dp"
                    />

            </LinearLayout>

        </LinearLayout>

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/text_check"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.1"
                android:textSize="@dimen/font12"
                android:paddingTop="@dimen/padding8"
                android:paddingBottom="@dimen/padding15"
                />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f9f9f9"
        />
</LinearLayout>