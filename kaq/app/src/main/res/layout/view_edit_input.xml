<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_ccc"
        />
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="@dimen/height48"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_edit_txt"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="160dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/forumdetial_boootm_editext_reply_shape"
            android:drawableLeft="@mipmap/write_reply"
            android:hint="@string/want_say"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/small_margin"
            android:textColorHint="@color/text_color4"
            android:textSize="@dimen/font13" />
        <LinearLayout
            android:id="@+id/v_menu"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_message_forum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingTop="@dimen/padding8"
                android:visibility="visible">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:id="@+id/tv_pl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@mipmap/art_pl_bg"
                        android:text="0"
                        android:paddingBottom="3dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font12"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/art_fav_selector"
                android:button="@null"
                android:visibility="visible" />
            <RelativeLayout
                android:id="@+id/v_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin12"
                >
                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/art_like_selector"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/tv_like_num"
                    android:layout_toRightOf="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/font12"
                    android:layout_alignTop="@+id/tv_like"
                    android:layout_marginLeft="-6dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/send_message_temp"
            style="@style/digit_switch_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/small_margin"
            android:paddingBottom="@dimen/little_margin"
            android:paddingTop="@dimen/little_margin"
            android:text="@string/send"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/v_edit"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="165dp"
        android:background="@color/main_color"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/btn_no_dialog"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="取消"
                android:textColor="@color/text_color333"
                android:paddingLeft="@dimen/padding15"
                android:paddingRight="@dimen/padding15"
                android:gravity="center"
                android:textSize="@dimen/font13"
                />
            <TextView
                android:id="@+id/tv_edit_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="我想说..."
                android:textColor="@color/text_color333"
                android:textSize="@dimen/font15"
                android:paddingLeft="@dimen/padding5"
                android:paddingRight="@dimen/padding5"
                android:singleLine="true"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/send_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="发送"
                android:textColor="@color/text_color333"
                android:gravity="center"
                android:paddingLeft="@dimen/padding15"
                android:paddingRight="@dimen/padding15"
                android:textSize="@dimen/font13"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/edit_txt"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="102dp"
            android:gravity="left"
            android:text=""
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.05"
            android:padding="@dimen/padding6"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin15"
            android:background="@drawable/bg_edit_input"
            android:textSize="@dimen/font13" />
    </LinearLayout>
</LinearLayout>

