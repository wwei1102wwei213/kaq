<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_gv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height32"

        android:textSize="@dimen/font11"
        android:textColor="@color/text_color999"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:background="@drawable/bg_record_title"/>
    <TextView
        android:id="@+id/tv_gv_size"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height38"
        android:textSize="@dimen/font12"
        android:textColor="@color/text_color666"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:background="@drawable/bg_gv_record_item"/>

</LinearLayout>