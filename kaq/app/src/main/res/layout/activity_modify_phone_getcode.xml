<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">

    <include layout="@layout/toorbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:drawableLeft="@mipmap/bind_big"
        android:drawablePadding="@dimen/padding10"
        android:text="更换新的手机号\n解除手机绑定"
        android:textColor="@color/text_color_ccc"
        android:textSize="@dimen/font15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height60"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_local_phone_old"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@mipmap/bind_phone"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/ic_sanjiao_down"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/text_color333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_phone_old"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="5"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/current_num_hint"
                android:inputType="phone"
                android:textColorHint="@color/text_color4"
                android:textSize="@dimen/font14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin30"
            android:background="@color/main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height60"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_local_phone_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@mipmap/bind_phone"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/ic_sanjiao_down"
                android:gravity="center"
                android:text="+86"
                android:textColor="@color/text_color333"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_phone_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="21dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/new_num_hint"
                android:inputType="phone"
                android:textColor="@color/text_color2"
                android:textColorHint="@color/text_color4"
                android:textSize="@dimen/font14" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_pin"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_btn_selector"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/font18" />
</LinearLayout>