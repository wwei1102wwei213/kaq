<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f9f9f9"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/white"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/rectangle_no_help"

            android:paddingTop="@dimen/padding8"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10"
            android:paddingBottom="@dimen/padding10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="———  个性化推荐  ———"
                    android:textSize="@dimen/font15"
                    android:textStyle="bold"
                    android:textColor="@color/text_color505155"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="根据你的个人兴趣，为你量身定制的首页"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin15"
                    android:textColor="@color/text_color666"
                    android:textSize="@dimen/font12"
                    />
                <TextView
                    android:id="@+id/v_recommend_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即开启"
                    android:background="@color/light_green2"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin15"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/padding6"
                    android:paddingTop="@dimen/padding6"
                    android:paddingLeft="@dimen/margin24"
                    android:paddingRight="@dimen/margin24"
                    android:gravity="center"
                    android:textSize="@dimen/font13"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_left_top"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_right_bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cabbage"
                    android:layout_marginLeft="22dp"
                    android:layout_centerVertical="true"/>
                <RelativeLayout
                    android:id="@+id/v_recommend_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_right_top_close"
                        android:padding="@dimen/padding5"
                        />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


</LinearLayout>