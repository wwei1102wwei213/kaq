<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/v_temp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height48"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="确  定"
            android:textSize="@dimen/font15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/margin48"
            android:paddingRight="@dimen/margin48"

            android:background="@drawable/bggreen_bdgreen_r15"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_ccc"/>
    </RelativeLayout>
    <View
        android:id="@+id/statusBar1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/bg_status_alpha"
        />
    <RelativeLayout
        android:id="@+id/v_temp_top"
        android:layout_below="@+id/statusBar1"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/v_close"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:src="@mipmap/top_btn_back_blue"
            android:scaleType="centerInside"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="栏目管理"
            android:textSize="@dimen/font17"
            android:textColor="@color/text_color333"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv"
        android:layout_above="@+id/v_temp"
        android:layout_below="@+id/v_temp_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="@dimen/padding12"
                android:paddingRight="@dimen/padding12"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color2"
                    android:text="我的栏目"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font15"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="＞拖曳调整顺序"
                    android:paddingLeft="@dimen/padding8"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font12"
                    android:textColor="@color/text_color3"
                    />
            </LinearLayout>
            <com.zeyuan.kyq.widget.CustomView.DragGrid
                android:id="@+id/dgd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="@dimen/margin24"
                android:gravity="center"
                android:horizontalSpacing="14dip"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="vertical"
                android:stretchMode="columnWidth"
                android:verticalSpacing="12dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="@dimen/padding12"
                android:paddingRight="@dimen/padding12"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color2"
                    android:text="更多栏目"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font15"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="＞点击添加更多"
                    android:paddingLeft="@dimen/padding8"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font12"
                    android:textColor="@color/text_color3"
                    />
            </LinearLayout>
            <com.zeyuan.kyq.widget.CustomView.OtherGridView
                android:id="@+id/gv_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="@dimen/margin12"
                android:gravity="center"
                android:horizontalSpacing="14dip"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="vertical"
                android:stretchMode="columnWidth"
                android:verticalSpacing="12dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>