    </LinearLayout>

    <ImageView
        android:id="@+id/iv_ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="18dp"
