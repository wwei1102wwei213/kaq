<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_policy_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_child_policy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height55"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="@color/text_normal"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/front14"
            android:drawableRight="@mipmap/in_right"
            android:paddingRight="@dimen/padding15"
            android:singleLine="true"
            />

    </RelativeLayout>

    <View
        style="@style/line_horizontal_normol"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />
</LinearLayout>