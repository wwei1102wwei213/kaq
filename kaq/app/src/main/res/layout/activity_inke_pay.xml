<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height48"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/title_inke_pay"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/font18"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/status_title_height"
            android:src="@mipmap/top_btn_back_blue"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </RelativeLayout>
    <include layout="@layout/line_view_ddd"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height55">
        <ImageView
            android:id="@+id/iv_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cash_success"
            android:visibility="gone"
            />
        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/height50"
            android:layout_height="@dimen/height50"
            android:progress="0"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/iv_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cash_fail"
            android:visibility="gone"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color666"
        android:textSize="@dimen/font16"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin24"
        android:text="正在使用微信支付"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin48"
        android:layout_marginRight="@dimen/margin48"
        android:background="@drawable/btn_light_green_r5"
        android:text="@string/close_all"
        android:textColor="@color/white"
        android:textSize="@dimen/font16"
        android:layout_marginTop="@dimen/margin20"
        android:visibility="gone"
        />

</LinearLayout>