<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:id="@+id/statusBar1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/bg_status_alpha"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/top_btn_back_blue"
            android:padding="@dimen/padding10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="查症状"
            android:textStyle="bold"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/font18"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_ddd"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择症状"
                android:paddingTop="@dimen/padding30"
                android:paddingBottom="@dimen/padding20"
                android:paddingLeft="@dimen/padding10"
                android:paddingRight="@dimen/padding10"
                android:textSize="@dimen/font15"
                android:textColor="@color/text_color666"
                android:layout_centerHorizontal="true"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_ddd"
                android:layout_toLeftOf="@+id/tv_temp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="36dp"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/line_ddd"
                android:layout_toRightOf="@+id/tv_temp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="36dp"
                />
        </RelativeLayout>

        <GridView
            android:id="@+id/gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"/>

    </LinearLayout>

</LinearLayout>