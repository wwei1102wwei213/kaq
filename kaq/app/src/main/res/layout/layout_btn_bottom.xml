<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/line_horizontal_e2_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/iv_select_friends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_select_friends_normal"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="通知"
                android:textColor="@color/text_color666"
                android:textSize="@dimen/font16" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/iv_select_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_select_img"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="图片"
                android:textColor="@color/text_color666"
                android:textSize="@dimen/font16" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/iv_switch_keyboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_keyboard"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="键盘"
                android:textColor="@color/text_color666"
                android:textSize="@dimen/font16" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>