<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white">
    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <ImageView
        android:id="@+id/btn_back"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:src="@mipmap/top_btn_back_blue"
        android:paddingRight="@dimen/small_margin"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/text_back"
        android:gravity="center_vertical"
        android:textColor="@color/text_color2"
        android:visibility="gone"
        android:textSize="@dimen/front14"
        android:drawableLeft="@mipmap/ssdk_social_toolbar_back"
        android:text="@string/last_step"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/title"
        android:textColor="@color/text_color2"
        android:textSize="@dimen/front18"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="标题" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:id="@+id/exit"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/exit"/>
        <TextView
            android:id="@+id/rigth_textview"
            android:visibility="gone"
            android:text="编辑"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/front18"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View style="@style/line_horizontal_normol"
        android:background="@color/line_ccc"
        android:layout_alignParentBottom="true"
        />
    <!--</RelativeLayout>-->
</RelativeLayout>