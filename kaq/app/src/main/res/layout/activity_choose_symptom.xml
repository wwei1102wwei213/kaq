<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zeyuan.kyq.widget.MyLayout
        android:id="@+id/ml"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/v_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height48">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/title_choose_symptom_mable"
                        android:textColor="@color/text_color333"
                        android:textSize="@dimen/font18"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/height48"
                        android:src="@mipmap/top_btn_back_blue"
                        android:scaleType="center"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/padding12"
                        android:paddingLeft="@dimen/padding12"
                        android:text="@string/btn_save"
                        android:textColor="@color/light_green2"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>

                <include layout="@layout/line_view_ddd"/>

                <LinearLayout
                    android:id="@+id/v_history"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding10"
                    android:visibility="gone"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_history_record"
                        android:drawableLeft="@mipmap/history_small_left"
                        android:paddingLeft="@dimen/padding12"
                        android:paddingTop="@dimen/padding8"
                        android:paddingBottom="@dimen/padding8"
                        android:drawablePadding="@dimen/padding4"
                        android:textSize="@dimen/font12"
                        android:textColor="@color/text_color999"
                        />
                    <com.zeyuan.kyq.widget.FlowLayout
                        android:id="@+id/fl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"

                        flowlayout:horizontal_spacing="8dp"
                        flowlayout:vertical_spacing="8dp">

                    </com.zeyuan.kyq.widget.FlowLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin8"
                        android:background="@color/main_color"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="1px"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_left"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:fadingEdge="none"
                        android:overScrollMode="never"
                        />
                    <ListView
                        android:id="@+id/lv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dividerHeight="0dp"
                        android:divider="@null"
                        android:fadingEdge="none"
                        android:paddingLeft="@dimen/padding12"
                        android:overScrollMode="never"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/v_bottom"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height48"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tv_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin12"
                        android:layout_marginRight="@dimen/margin12"
                        android:background="@drawable/bg_r5_main_color_no_stroke"
                        android:layout_centerVertical="true"
                        android:textColor="@color/light_green"
                        android:hint="@string/hint_choose_symptom"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/padding8"
                        android:paddingRight="@dimen/padding8"
                        android:textColorHint="@color/text_color999"
                        android:textSize="@dimen/font13"
                        android:drawableLeft="@mipmap/input_small_left"
                        android:drawablePadding="@dimen/padding5"
                        android:singleLine="true"
                        android:ellipsize="end"
                        />
                    <include layout="@layout/line_view_ddd"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_edit"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="165dp"
                android:background="@color/main_color"
                android:layout_alignParentBottom="true"

                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="48dp">
                    <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="取消"
                        android:textColor="@color/text_color333"
                        android:paddingLeft="@dimen/padding15"
                        android:paddingRight="@dimen/padding15"
                        android:gravity="center"
                        android:textSize="@dimen/font13"
                        />
                    <TextView
                        android:id="@+id/tv_edit_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="@string/text_choose_symptom_remark"
                        android:textColor="@color/text_color333"
                        android:textSize="@dimen/font15"
                        android:paddingLeft="@dimen/padding5"
                        android:paddingRight="@dimen/padding5"
                        android:singleLine="true"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/send_message"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="确定"
                        android:textColor="@color/text_color333"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding15"
                        android:paddingRight="@dimen/padding15"
                        android:textSize="@dimen/font13"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/et"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="102dp"
                    android:gravity="left"
                    android:text=""
                    android:lineSpacingExtra="2dp"
                    android:lineSpacingMultiplier="1.05"
                    android:padding="@dimen/padding6"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"
                    android:background="@drawable/bg_edit_input"
                    android:textSize="@dimen/font13" />
            </LinearLayout>
            <View
                android:id="@+id/v_half"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/half_alpha"
                android:layout_above="@+id/v_edit"
                android:visibility="gone"/>
        </RelativeLayout>
    </com.zeyuan.kyq.widget.MyLayout>
</FrameLayout>