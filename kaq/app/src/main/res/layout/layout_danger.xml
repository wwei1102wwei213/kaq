<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        style="@style/drug_detail_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可能的病情风险症状" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/color_f4"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/v_eff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical">

            <com.zeyuan.kyq.widget.CustomArcProgressBar.MyCircleProgressBar
                android:id="@+id/cpb_1"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/padding6"
                android:max="80"
                android:progress="0"
                app:borderWidth_circle="3dp"
                app:degree_circle="180"
                app:progressColor_circle="@color/light_green2"
                app:progressStyle_circle="arc"
                app:radius_circle="55dp"
                app:unprogresColor_circle="@color/line_ddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin25"
                android:text="副作用"
                android:textColor="@color/text_color999"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_num_eff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:textColor="@color/light_green2"
                android:textSize="@dimen/font15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_eff_str"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin8"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/padding8"
                android:paddingRight="@dimen/padding8"
                android:singleLine="true"
                android:textColor="@color/text_color666"
                android:textSize="@dimen/font12"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/v_comp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical">

            <com.zeyuan.kyq.widget.CustomArcProgressBar.MyCircleProgressBar
                android:id="@+id/cpb_2"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/padding6"
                android:max="80"
                android:progress="0"
                app:borderWidth_circle="3dp"
                app:degree_circle="180"
                app:progressColor_circle="@color/decision_progress_red"
                app:progressStyle_circle="arc"
                app:radius_circle="55dp"
                app:unprogresColor_circle="@color/line_ddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin25"
                android:text="并发症"
                android:textColor="@color/text_color999"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_num_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:textColor="@color/light_green2"
                android:textSize="@dimen/font15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_comp_str"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin8"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/padding8"
                android:paddingRight="@dimen/padding8"
                android:singleLine="true"
                android:textColor="@color/text_color666"
                android:textSize="@dimen/font12"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>