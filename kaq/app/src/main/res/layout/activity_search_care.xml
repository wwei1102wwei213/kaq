<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/statusBar1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/bg_status_alpha"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/top_btn_back_blue"
            android:padding="@dimen/padding10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="搜索你关注的"
            android:textStyle="bold"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/font17"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_ddd"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height48"
            android:layout_marginTop="@dimen/margin15"
            android:background="@color/white">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="收到收到收收到收到"
                android:paddingLeft="@dimen/padding15"
                android:paddingRight="@dimen/padding10"
                android:textSize="@dimen/font17"
                android:textColor="@color/text_color666"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/change"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="切换"
                android:gravity="center"
                android:paddingLeft="@dimen/padding8"
                android:paddingRight="@dimen/padding8"
                android:layout_alignParentRight="true"
                android:textColor="@color/light_green2"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="（您关注的癌种）"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/name"
                android:textSize="@dimen/font13"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="@dimen/font14"
            android:gravity="center_vertical"
            android:textColor="@color/text_color666"
            android:layout_marginTop="@dimen/margin15"
            android:paddingLeft="@dimen/padding15"
            android:text="选择阶段类型"/>

        <com.zeyuan.kyq.widget.FlowLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding12"
            android:paddingBottom="@dimen/padding12"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            flowlayout:horizontal_spacing="15dp"
            flowlayout:vertical_spacing="15dp">

        </com.zeyuan.kyq.widget.FlowLayout>

    </LinearLayout>
</LinearLayout>