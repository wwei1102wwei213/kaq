<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="90dp"
    android:layout_height="80dp">
    <RelativeLayout
        android:layout_width="82dp"
        android:layout_height="79dp">
        <LinearLayout
            android:id="@+id/v_bg"
            android:orientation="vertical"
            android:layout_width="82dp"
            android:layout_height="79dp"
            android:background="@drawable/no_select_f0_select_fff">
            <ImageView
                android:id="@+id/iv_child"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/font13"
                android:textColor="@color/no_select_666_select_green"
                android:text=""/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:text=""
            android:background="@drawable/bg_news_num_hint"
            android:textColor="@color/white"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:gravity="center"
            android:textSize="@dimen/font9"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:visibility="gone"
            />

    </RelativeLayout>
</LinearLayout>