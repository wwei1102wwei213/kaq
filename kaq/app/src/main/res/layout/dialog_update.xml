<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgwhite_borderec_r10">
    <TextView
        android:id="@+id/tv_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableRight="@mipmap/ic_close_update"
        android:gravity="right"
        android:padding="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/civ_update_manager_avatar"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="@dimen/font15"
                android:src="@mipmap/ic_avatar_pm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_update_manager_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小蓝"
                    android:textColor="@color/text_color333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_update_manager_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="产品经理"
                    android:textColor="@color/text_color999"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="28dp"
            android:text="更新内容"
            android:textColor="@color/text_color666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="30dp"
            android:background="@drawable/tv_blue_stroke_r6"
            android:gravity="center"
            android:minWidth="@dimen/btn_width_update"
            android:text="立即更新"
            android:textColor="@color/text_blue"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>