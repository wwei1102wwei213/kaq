<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flowlayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/padding15"

        android:background="@color/white"
        android:orientation="vertical">
        <View style="@style/line_horizontal_e2_1dp"
            android:layout_marginBottom="@dimen/margin10"
            />
        <LinearLayout
            android:id="@+id/ll_show_next_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_next1"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/btn_bg_info_step"
                android:text="确定"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:textSize="@dimen/front16"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_jump_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="随便逛逛 "
            android:drawableRight="@mipmap/tv_gene_right_blue"
            android:textColor="@color/light_green"
            android:textSize="@dimen/font16"
            android:padding="@dimen/padding4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin5"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/view_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <View
            android:id="@+id/statusBar1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/bg_status_alpha"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@mipmap/top_btn_back_blue"
                android:scaleType="centerInside"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/ll_return_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/top_btn_back_blue"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="返回"
                    android:textSize="@dimen/font15"
                    android:textColor="@color/light_green"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_white_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/font19"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancer_choose_hint_top"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color999"
            android:paddingBottom="@dimen/padding10"
            />
        <View style="@style/line_horizontal_e2_1dp"
            android:id="@+id/line_cancer_choose_top"
            android:layout_marginLeft="@dimen/margin12"
            android:layout_marginRight="@dimen/margin12"
            android:visibility="visible"/>

        <com.zeyuan.kyq.widget.CustomScrollView
            android:id="@+id/csv_cancer_choose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:layout_marginTop="@dimen/margin10"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_first_cancer_body"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/padding10"
                    android:visibility="visible">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/view_second_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                            <RelativeLayout
                                android:id="@+id/rl_second_cancer_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:paddingBottom="@dimen/padding10"
                                >
                                <ImageView
                                    android:id="@+id/iv_top_cancer"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/cancer1_shiguan"
                                    />
                                <TextView
                                    android:id="@+id/tv_top_cancer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/front16"
                                    android:layout_below="@+id/iv_top_cancer"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/margin10"
                                    />
                            </RelativeLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/view_first_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_11"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/six_cancer_selector_1"
                                    android:text="肺癌"
                                    android:gravity="center_horizontal"
                                    style="@style/cancer_choose_top_style"
                                    />
                                <TextView
                                    android:id="@+id/tv_12"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/six_cancer_selector_2"
                                    android:text="肝癌"
                                    android:gravity="center_horizontal"
                                    style="@style/cancer_choose_top_style"
                                    />
                                <TextView
                                    android:id="@+id/tv_13"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/six_cancer_selector_3"
                                    android:text="肠癌"
                                    android:gravity="center_horizontal"
                                    style="@style/cancer_choose_top_style"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:id="@+id/tv_21"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/six_cancer_selector_4"
                                    android:text="胃癌"
                                    android:gravity="center_horizontal"
                                    style="@style/cancer_choose_top_style"
                                    />
                                <TextView
                                    android:id="@+id/tv_22"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/six_cancer_selector_5"
                                    android:text="乳腺癌"
                                    android:gravity="center_horizontal"
                                    style="@style/cancer_choose_top_style"
                                    />
                                <TextView
                                    android:id="@+id/tv_23"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@drawable/six_cancer_selector_6"
                                    android:text="食管癌"
                                    android:gravity="center_horizontal"
                                    style="@style/cancer_choose_top_style"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>



                    <LinearLayout
                        android:id="@+id/view_first_down"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">
                        <View style="@style/line_horizontal_e2_1dp"
                            android:layout_marginLeft="@dimen/margin12"
                            android:layout_marginRight="@dimen/margin12"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_marginBottom="@dimen/margin10"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding20"
                            android:paddingLeft="@dimen/padding20"
                            android:paddingTop="@dimen/padding10"
                            android:paddingBottom="@dimen/padding10"
                            >
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_31"
                                    android:text="鼻咽癌"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_32"
                                    android:text="白血病"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_33"

                                    android:text="生殖系统"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/padding20"
                            android:paddingLeft="@dimen/padding20"
                            android:paddingTop="@dimen/padding10"
                            android:paddingBottom="@dimen/padding10"
                            >
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_41"
                                    android:text="淋巴癌"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_42"

                                    android:text="肾癌"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_43"

                                    android:text="膀胱癌"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <View style="@style/line_horizontal_e2_1dp"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_marginLeft="@dimen/margin12"
                            android:layout_marginRight="@dimen/margin12"
                            />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding20"
                            >
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_51"
                                    android:layout_width="120dp"
                                    android:textColor="@color/red_white_selector"
                                    android:background="@drawable/bg_tv_cancer_three_item_selector"
                                    android:text="其他癌种"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">
                                <TextView
                                    style="@style/tv_cancer_second_item_style"
                                    android:id="@+id/tv_52"
                                    android:layout_width="120dp"
                                    android:textColor="@color/red_white_selector"
                                    android:background="@drawable/bg_tv_cancer_three_item_selector"
                                    android:text="不确定癌种"/>
                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_cancer_second_body"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin20"
                    android:visibility="gone"
                    >

                    <View style="@style/line_horizontal_e2_1dp"
                        android:layout_marginLeft="@dimen/margin12"
                        android:layout_marginRight="@dimen/margin12"
                        android:layout_marginBottom="@dimen/margin12"/>

                    <com.zeyuan.kyq.widget.FlowLayout
                        android:id="@+id/flow_layout_second_cancer_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding20"
                        android:paddingRight="@dimen/padding20"
                        flowlayout:horizontal_spacing="@dimen/margin12"
                        flowlayout:vertical_spacing="@dimen/margin12"
                        >

                    </com.zeyuan.kyq.widget.FlowLayout>

                    <View style="@style/line_horizontal_e2_1dp"
                        android:id="@+id/line_two"
                        android:layout_marginLeft="@dimen/margin12"
                        android:layout_marginRight="@dimen/margin12"
                        android:layout_marginTop="@dimen/margin12"
                        android:layout_marginBottom="@dimen/margin12"/>

                    <com.zeyuan.kyq.widget.FlowLayout
                        android:id="@+id/flow_layout_three_cancer_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding20"
                        android:paddingRight="@dimen/padding20"
                        flowlayout:horizontal_spacing="@dimen/margin12"
                        flowlayout:vertical_spacing="@dimen/margin12"
                        >
                        <!--<include layout="@layout/tv_cancer_second_item_red"/>-->

                    </com.zeyuan.kyq.widget.FlowLayout>

                    <View style="@style/line_horizontal_e2_1dp"
                        android:id="@+id/line_three"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/margin12"
                        android:layout_marginRight="@dimen/margin12"
                        android:layout_marginTop="@dimen/margin12"/>


                    <TextView
                        android:id="@+id/tv_next2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_bg_info_step"
                        android:text="确定"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/margin48"
                        android:layout_marginRight="@dimen/margin48"
                        android:layout_marginTop="@dimen/margin25"
                        android:textSize="@dimen/front16"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.zeyuan.kyq.widget.CustomScrollView>
    </LinearLayout>


</RelativeLayout>