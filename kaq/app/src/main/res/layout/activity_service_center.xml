<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height44"
        android:id="@+id/v_top"
        >
        <!--<ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/height44"
            android:layout_height="match_parent"
            android:src="@mipmap/top_btn_back_blue"
            android:scaleType="centerInside"
            />-->
        <LinearLayout
            android:id="@+id/v_close"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关闭"
                android:textSize="@dimen/font13"
                android:textColor="@color/light_green"
                android:paddingLeft="@dimen/padding12"
                android:paddingRight="@dimen/padding12"
                android:gravity="center"
                />
            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:background="@color/light_green"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/height44"
            android:layout_height="match_parent"
            android:padding="@dimen/padding10"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@mipmap/forum_share"
            android:visibility="gone"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/iv_share"
            android:layout_toRightOf="@+id/v_close"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            >

            <RelativeLayout
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_type_1"
                    android:text="@string/btn_service_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/font15"
                    android:textColor="@color/no_select_333_select_green"/>
                <View
                    android:id="@+id/line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_type_1"
                    android:layout_alignEnd="@+id/tv_type_1"
                    android:layout_alignLeft="@+id/tv_type_1"
                    android:layout_alignRight="@+id/tv_type_1"
                    android:background="@color/light_green"
                    android:visibility="visible"
                    android:layout_marginBottom="1dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/v2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_type_2"
                    android:text="@string/btn_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/font15"
                    android:textColor="@color/no_select_333_select_green"/>
                <View
                    android:id="@+id/line_2"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_type_2"
                    android:layout_alignEnd="@+id/tv_type_2"
                    android:layout_alignLeft="@+id/tv_type_2"
                    android:layout_alignRight="@+id/tv_type_2"
                    android:background="@color/light_green"
                    android:visibility="gone"
                    android:layout_marginBottom="1dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/v3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:text="@string/btn_crowd_funding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/font15"
                    android:textColor="@color/no_select_333_select_green"/>

            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_ccc"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>