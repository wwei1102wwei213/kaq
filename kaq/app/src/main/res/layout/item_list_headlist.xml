<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding10"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10">
        <ImageView
            android:id="@+id/iv_pic_headline_list"
            android:layout_width="@dimen/size75"
            android:layout_height="@dimen/size75"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title_headline_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size55"
            android:layout_toLeftOf="@+id/iv_pic_headline_list"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:gravity="center_vertical"
            android:paddingRight="@dimen/padding10"
            android:textSize="@dimen/font16"
            android:textColor="@color/item_list_title"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size20"
            android:layout_below="@id/tv_title_headline_list"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_form_headline_list"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding20"
                android:text=""
                android:maxWidth="100dp"
                style="@style/text_headline_list_hint"
                />
            <TextView
                android:id="@+id/tv_viewnum_headline_list"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_form_headline_list"
                android:text=""
                style="@style/text_headline_list_hint"
                android:layout_marginRight="@dimen/padding20"
                />
            <TextView
                android:id="@+id/tv_time_headline_list"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_viewnum_headline_list"
                style="@style/text_headline_list_hint"
                android:layout_marginRight="@dimen/padding10"

                android:text=""
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>