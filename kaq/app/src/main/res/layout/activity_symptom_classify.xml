<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/statusBar1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/bg_status_alpha"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/top_btn_back_blue"
            android:padding="@dimen/padding10"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="查症状"
            android:textStyle="bold"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/font18"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/search_small_blue"
            android:layout_alignParentRight="true"
            android:padding="@dimen/padding12"/>
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_ddd"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/main_color"
        android:paddingTop="@dimen/padding4"

        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_left"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            />
        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:fadingEdge="none"
            android:paddingLeft="@dimen/padding20"
            android:overScrollMode="never"/>
    </LinearLayout>
</LinearLayout>