<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <com.zeyuan.kyq.widget.WheelView
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="5"
        app:lineColor="@color/time_gray"
        app:lineHeight="0.5dp"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/text_light"
        app:normalTextSize="14sp"
        app:selectedTextColor="@color/light_green"
        app:selectedTextSize="20sp"
        app:unitHight="48dp"
        />

    <com.zeyuan.kyq.widget.WheelView
        android:id="@+id/month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="5"
        app:lineColor="@color/time_gray"
        app:lineHeight="0.5dp"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/text_light"
        app:normalTextSize="14sp"
        app:selectedTextColor="@color/light_green"
        app:selectedTextSize="20sp"
        app:unitHight="48dp"
        />

    <com.zeyuan.kyq.widget.WheelView
        android:id="@+id/day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="5"
        app:lineColor="@color/time_gray"
        app:lineHeight="0.5dp"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/text_light"
        app:normalTextSize="14sp"
        app:selectedTextColor="@color/light_green"
        app:selectedTextSize="20sp"
        app:unitHight="48dp"
        />

</LinearLayout>