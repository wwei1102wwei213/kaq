<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_fragment_help_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/margin15"
        >
        <ImageView
            android:id="@+id/iv_help_mid_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_help_mid_img"
            android:paddingLeft="@dimen/margin8"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/font17"
            android:textColor="#393939"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_help_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/font15"
            android:textColor="@color/text_check"
            android:paddingBottom="@dimen/margin8"
            android:layout_marginLeft="@dimen/margin20"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.1"
            />
        <TextView
            android:id="@+id/tv_help_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/font15"
            android:textColor="@color/text_check"
            android:layout_marginLeft="@dimen/margin20"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.1"
            />
    </LinearLayout>

</LinearLayout>