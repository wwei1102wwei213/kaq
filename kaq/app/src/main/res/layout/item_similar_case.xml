<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/item_similar_case_bg"
        android:orientation="horizontal">

        <com.zeyuan.kyq.widget.CircleImageView
            android:id="@+id/civ_head_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/default_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路遥"
                    android:maxLength="12"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_similar_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/tv_orange_stroke"
                    android:paddingBottom="2dp"
                    android:paddingLeft="3.5dp"
                    android:paddingRight="3.5dp"
                    android:paddingTop="1dp"
                    android:maxLines="1"
                    android:text="相似度50%"
                    android:textColor="@color/text_orange"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="肺腺癌"
                    android:textColor="@color/text_color333"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_move"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="12"
                    android:text="脑转->骨转"
                    android:textColor="@color/text_color333"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="[靶向药-易瑞沙]"
                android:textColor="@color/text_color666"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_focus"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/circle_follow_change_selector"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="+ 关注"
        android:textColor="@color/white_black2_selector"
        android:textSize="13sp" />
</FrameLayout>