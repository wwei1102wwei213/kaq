<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <View
        style="@style/main_article_menu"
        android:background="#fdaeaa"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding10"
        android:paddingTop="@dimen/padding10">
        <TextView
            android:id="@+id/tv_main_zsk_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_article_zhishiku"
            android:textColor="#E75250"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/main_left_zsk"
            android:layout_marginBottom="6dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:paddingRight="@dimen/padding5"
            />
        <TextView
            android:id="@+id/tv_main_article_title_zhishiku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/text_normal"
            android:paddingBottom="2dp"
            />
        <TextView
            android:id="@+id/tv_summary_zhishiku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="13sp"
            android:text=""/>
    </LinearLayout>
</LinearLayout>