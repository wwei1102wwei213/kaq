<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">
    <View
        android:id="@+id/statusBar1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/bg_status_alpha"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/top_btn_back_blue"
                    android:padding="@dimen/padding10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="症状百科"
                    android:textStyle="bold"
                    android:textColor="@color/text_color333"
                    android:textSize="@dimen/font16"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/margin12"
                android:layout_marginRight="@dimen/margin12"
                android:layout_marginTop="@dimen/margin5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="搜索宇宙"
                    android:layout_marginLeft="@dimen/margin20"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/font12"
                    android:textColorHint="@color/text_color_ccc"
                    />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/v_look_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/look_more_symptom"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/margin20"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="查看更多症状"
                android:textColor="@color/white"
                android:textSize="@dimen/font12"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
        </RelativeLayout>
        <com.zeyuan.kyq.widget.TouchFlyCard.SwipeFlingAdapterView
            android:id="@+id/sfav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rotation_degrees="15.5"
            />

    </FrameLayout>
</LinearLayout>