<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_top_space"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00000000"
        />
    <RelativeLayout
        android:id="@+id/rl_other_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_alpha"
        >

        <LinearLayout
            android:id="@+id/ll_body"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            >
            <TextView
                android:layout_width="20px"
                android:layout_height="17px"
                android:background="@mipmap/three_top"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                />

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="@drawable/bg_cancer_zm"
            >

            <ListView
                android:id="@+id/lv_circle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:dividerHeight="1px"
                />

        </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>