<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_white_half"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:paddingRight="@dimen/padding20"
    android:paddingLeft="@dimen/padding20"
    android:paddingTop="@dimen/padding15"
    android:paddingBottom="@dimen/padding15"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/release_forum_success"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_check"
        android:textSize="@dimen/font16"
        android:text="发帖成功！"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin10"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得9积分"
        android:textSize="@dimen/font15"
        android:textColor="@color/text_color2"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        />

</LinearLayout>