<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_guide_content"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@drawable/guide_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_guide_release" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和圈友们一起聊上一聊"
            android:textColor="@color/text_color333"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_guide_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="随时抒发情感,和圈友们交流/讨论病情"
            android:textColor="@color/text_color666"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_with"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="54dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="好"
        android:textColor="@color/text_blue"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
