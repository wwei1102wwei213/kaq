<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_white_title"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/front18"
            android:gravity="center"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_white_title_back"
            android:layout_width="@dimen/height50"
            android:layout_height="match_parent"
            android:src="@mipmap/top_btn_back_blue"
            android:scaleType="centerInside"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_e2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_e2"
        android:layout_marginTop="@dimen/margin20"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height62"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提现账号："
            android:textSize="@dimen/font16"
            android:textColor="@color/text_color2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding15"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/font16"
            android:textColor="@color/text_color2"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_bind_wx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/light_green"
            android:textSize="@dimen/font14"
            android:text="打开微信关联账号"
            android:drawableRight="@mipmap/to_right"
            android:paddingLeft="@dimen/padding15"
            android:paddingRight="@dimen/padding15"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_e2"/>
    <TextView
        android:id="@+id/tv_phone_num_hint"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=""
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding18"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_e2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height62"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机验证："
            android:textSize="@dimen/font16"
            android:textColor="@color/text_color2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding15"
            />
        <EditText
            android:id="@+id/et_pin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:textColorHint="@color/text_color3"
            android:textSize="@dimen/font16"
            android:textColor="@color/text_color2"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/tv_pin"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="获取验证码"
            android:textSize="@dimen/font12"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_btn_selector"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginLeft="@dimen/margin15"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_e2"/>

    <Button
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="立即绑定账号"
        android:textColor="@color/white"
        android:background="@drawable/btn_light_green_r5"
        android:textSize="@dimen/font16"
        android:layout_marginLeft="@dimen/margin48"
        android:layout_marginTop="@dimen/margin24"
        android:layout_marginRight="@dimen/margin48"
        />
</LinearLayout>