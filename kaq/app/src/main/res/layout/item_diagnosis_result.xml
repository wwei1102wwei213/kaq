<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height55"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/diagnosis_item"
        android:gravity="center_horizontal"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/font11" />

    <TextView
        android:id="@+id/diagnosis_result"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/number"
        android:gravity="center"
        android:text="药物副作用"
        android:textColor="@color/text_color666"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@mipmap/green_drak_right" />
</RelativeLayout>