<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/statusBar1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_green2"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="@mipmap/bg_record_rule_quota">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_title_height">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/title_record_rule_quota"
                android:textColor="@color/white"
                android:textSize="@dimen/font18"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/status_title_height"
                android:src="@mipmap/top_btn_back_white_sma"
                android:scaleType="center"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/v1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?android:selectableItemBackground">
            <ImageView
                style="@style/record_rule_quota_img"
                android:src="@mipmap/rule_quota_1"/>
            <TextView
                style="@style/record_rule_quota_title"
                android:text="@string/quota_blood" />
            <TextView
                android:id="@+id/tv_time_1"
                style="@style/record_rule_quota_record_time"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_ddd"/>
        <LinearLayout
            android:id="@+id/v2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?android:selectableItemBackground">
            <ImageView
                style="@style/record_rule_quota_img"
                android:src="@mipmap/rule_quota_2"/>
            <TextView
                style="@style/record_rule_quota_title"
                android:text="@string/quota_feces" />
            <TextView
                android:id="@+id/tv_time_2"
                style="@style/record_rule_quota_record_time"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_ddd"/>
        <LinearLayout
            android:id="@+id/v3"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?android:selectableItemBackground">
            <ImageView
                style="@style/record_rule_quota_img"
                android:src="@mipmap/rule_quota_3"/>
            <TextView
                style="@style/record_rule_quota_title"
                android:text="@string/quota_urine" />
            <TextView
                android:id="@+id/tv_time_3"
                style="@style/record_rule_quota_record_time"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_ddd"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/v4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?android:selectableItemBackground">
            <ImageView
                style="@style/record_rule_quota_img"
                android:src="@mipmap/rule_quota_4"/>
            <TextView
                style="@style/record_rule_quota_title"
                android:text="@string/quota_liver" />
            <TextView
                android:id="@+id/tv_time_4"
                style="@style/record_rule_quota_record_time"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_ddd"/>
        <LinearLayout
            android:id="@+id/v5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?android:selectableItemBackground">
            <ImageView
                style="@style/record_rule_quota_img"
                android:src="@mipmap/rule_quota_5"/>
            <TextView
                style="@style/record_rule_quota_title"
                android:text="@string/quota_kidney" />
            <TextView
                android:id="@+id/tv_time_5"
                style="@style/record_rule_quota_record_time"
                android:text=""/>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_ddd"/>
        <LinearLayout
            android:id="@+id/v6"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="?android:selectableItemBackground">
            <ImageView
                style="@style/record_rule_quota_img"
                android:src="@mipmap/rule_quota_6"/>
            <TextView
                style="@style/record_rule_quota_title"
                android:text="@string/quota_other" />
            <TextView
                android:id="@+id/tv_time_6"
                style="@style/record_rule_quota_record_time"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_ddd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f8fb"/>
</LinearLayout>