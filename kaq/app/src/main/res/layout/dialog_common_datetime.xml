<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:id="@+id/ll_top_choose_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:background="@color/line_e6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_choose_time"
            android:textSize="@dimen/front16"
            android:textColor="@color/text_color333"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_time_choose"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/choose_time_btn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin15"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/btn_time_choose_now"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="使用中"
            android:textColor="@color/white"
            android:background="@drawable/choose_time_btn"
            android:layout_toLeftOf="@+id/btn_time_choose"
            android:layout_marginRight="@dimen/margin15"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/ll_top_choose_time"
        android:orientation="horizontal" >
        <com.zeyuan.kyq.widget.ZYDatePicker
            android:id="@+id/zydate_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>