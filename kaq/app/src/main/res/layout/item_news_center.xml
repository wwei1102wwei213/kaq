<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding15"
        android:paddingRight="@dimen/padding15"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_temp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/default_avatar"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:id="@+id/ll_temp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_news_num"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/bg_news_num"
                android:textColor="@color/white"
                android:textSize="@dimen/font13"
                android:text="11"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/in_right"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_temp"
            android:layout_toLeftOf="@+id/ll_temp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_news_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/front16"
                android:textColor="@color/text_color2"
                android:paddingLeft="@dimen/padding15"
                android:singleLine="true"
                android:text="消息标题"
                />
            <TextView
                android:id="@+id/tv_news_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/front14"
                android:textColor="@color/text_color3"
                android:paddingLeft="@dimen/padding15"
                android:layout_below="@+id/tv_news_item"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="消息内容"
                />
        </RelativeLayout>

    </RelativeLayout>
    <View
        style="@style/line_horizontal_e2_1dp"
        android:layout_marginLeft="62dp"/>
</LinearLayout>