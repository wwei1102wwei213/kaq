<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_article_item"
            android:layout_width="105dp"
            android:layout_height="83dp"
            android:layout_marginLeft="@dimen/margin12"
            android:layout_marginTop="@dimen/margin12"
            android:scaleType="centerCrop"
            android:src="@mipmap/loading_fail"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/padding10"
            android:paddingLeft="@dimen/padding12">
            <TextView
                android:id="@+id/tv_title_article_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/no_select_505155_select_999"
                android:lineSpacingExtra="3dp"
                android:lineSpacingMultiplier="1.1"
                android:textSize="@dimen/font15"
                android:textStyle="bold"
                android:paddingTop="@dimen/padding12"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/padding15">
                <TextView
                    android:id="@+id/tv_from_article_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color999"
                    android:textSize="@dimen/font11"
                    android:maxWidth="100dp"
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/tv_watch_article_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color999"
                    android:textSize="@dimen/font11"
                    android:layout_marginLeft="@dimen/margin10"
                    />
                <TextView
                    android:id="@+id/tv_like_article_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/margin10"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/font11"
                    android:layout_marginRight="@dimen/margin8"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_ddd"
        android:layout_marginLeft="@dimen/margin12"
        />
</LinearLayout>